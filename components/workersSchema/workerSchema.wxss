/* components/workersSchema/workerSchema.wxss */
.container{
  display: flex;
  flex-direction: row;
  width:100%;
  margin: 0;
  
  box-sizing: border-box;
  position: relative;
  opacity: 0;
  height: 0rpx;
  overflow: hidden;
}

.container_hover{
  background-color: #ccc;
}

.photo{
  width: 30%;

}
.photo image{
  width: 100%;
  height: 100%;
}

.info{
  width:60%;
}
.info text{
  text-align: center;
}

.options{
  width: 10%;
  z-index: 9;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.workerBox{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin: 10rpx 0;
  background-color: #f1f1f1;
  padding: 10rpx;
}